<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ltr" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="colorKeyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/colorkey_bar_colorkey_min_text_width</item>
        <item name="android:maxWidth">@dimen/colorkey_bar_colorkey_max_text_width</item>
        <item name="android:drawablePadding">@dimen/colorkey_bar_drawable_padding_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAppearance">@style/ltr</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="colorkeydate" parent="colorKeyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/components_colorkey_bar_time_text_width</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#B3FFFFFF</item>
    </style>

    <style name="optionskeystyle" parent="colorKeyStyle">
        <item name="android:layout_width">84dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 4 types of progress bar -->
    <style name="ProgressBarStyleDefault" parent="android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_drawable</item>
    </style>

    <style name="ProgressBarStyleDefault.Wizard">
        <item name="android:minHeight">@dimen/wizard_compact_01_progress_bar_filled_height</item>
        <item name="android:maxHeight">@dimen/wizard_compact_01_progress_bar_filled_height</item>
        <item name="android:minWidth">@dimen/wizard_step1_progress_bar_width</item>
        <item name="android:maxWidth">@dimen/wizard_step1_progress_bar_width</item>
    </style>

    <style name="ProgressBarStyleDefault.Zapbar">
        <item name="android:minHeight">@dimen/zapbar_numeric_input_now_column02_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/zapbar_numeric_input_now_column02_progress_bar_height</item>
        <item name="android:minWidth">@dimen/zapbar_numeric_input_now_column02_progress_bar_width</item>
        <item name="android:maxWidth">@dimen/zapbar_numeric_input_now_column02_progress_bar_width</item>
    </style>

    <style name="ProgressBarStyleDefault.ChannelsCollapsed">
        <item name="android:minHeight">@dimen/channels_collapsed_tile_column01_01_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/channels_collapsed_tile_column01_01_progress_bar_height</item>
        <item name="android:minWidth">@dimen/channels_collapsed_tile_column01_01_progress_bar_width</item>
        <item name="android:maxWidth">@dimen/channels_collapsed_tile_column01_01_progress_bar_width</item>
    </style>

    <style name="ProgressBarStyleDefault.ChannelsExpanded">
        <item name="android:minHeight">@dimen/channels_expanded_tile_column01_01_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/channels_expanded_tile_column01_01_progress_bar_height</item>
        <item name="android:minWidth">@dimen/channels_expanded_tile_column01_01_progress_bar_width</item>
        <item name="android:maxWidth">@dimen/channels_expanded_tile_column01_01_progress_bar_width</item>
    </style>

    <style name="ProgressBarStyleLoader">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_loader</item>
    </style>

    <style name="ProgressBarStyleDefault.DiscSpace">
        <item name="android:minHeight">@dimen/progressbar_small_height</item>
        <item name="android:maxHeight">@dimen/progressbar_small_height</item>
        <item name="android:minWidth">@dimen/progressbar_small_width</item>
        <item name="android:maxWidth">@dimen/progressbar_small_width</item>
        <item name="android:progressDrawable">@drawable/progressbar_drawable_disc_space</item>
    </style>

    <style name="ProgressBarStyleDefault.Highlighted">
        <item name="android:minHeight">@dimen/progressbar_small_height</item>
        <item name="android:maxHeight">@dimen/progressbar_small_height</item>
        <item name="android:minWidth">@dimen/progressbar_small_width</item>
        <item name="android:maxWidth">@dimen/progressbar_small_width</item>
        <item name="android:progressDrawable">@drawable/progressbar_drawable_highlighted</item>
    </style>

    <style name="ProgressBarStyleDefault.Highlighted.Large">
        <item name="android:minHeight">@dimen/progressbar_large_height</item>
        <item name="android:maxHeight">@dimen/progressbar_large_height</item>
        <item name="android:minWidth">@dimen/progressbar_large_width</item>
        <item name="android:maxWidth">@dimen/progressbar_large_width</item>
        <item name="android:progressDrawable">@drawable/progressbar_drawable_highlighted_large</item>
    </style>

</resources>
