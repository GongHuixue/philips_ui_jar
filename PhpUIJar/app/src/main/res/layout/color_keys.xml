<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/colorkeylayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/redColorKey"
                style="@style/colorKeyStyle"
                android:layout_marginStart="@dimen/colorkey_bar_margin_left_width"
                android:drawableStart="@drawable/ck_redkey"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:textColor="#E82C2E" />

            <TextView
                android:id="@+id/greenColorKey"
                style="@style/colorKeyStyle"
                android:layout_marginStart="@dimen/colorkey_bar_margin_left_width"
                android:drawableStart="@drawable/ck_greenkey"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:textColor="#52A73E" />

            <TextView
                android:id="@+id/yellowColorKey"
                style="@style/colorKeyStyle"
                android:layout_marginStart="@dimen/colorkey_bar_margin_left_width"
                android:drawableStart="@drawable/ck_yellowkey"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:textColor="#FCAF1A" />

            <TextView
                android:id="@+id/blueColorKey"
                style="@style/colorKeyStyle"
                android:layout_marginStart="@dimen/colorkey_bar_margin_left_width"
                android:drawableStart="@drawable/ck_bluekey"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:textColor="#0097CF" />
        </LinearLayout>

        <ui.DateTimeView
            android:id="@+id/colorkey_datetime"
            style="@style/colorkeydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/colorkeylayout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/colorkeylayout"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_blue_bright" />
    </RelativeLayout>

</merge>