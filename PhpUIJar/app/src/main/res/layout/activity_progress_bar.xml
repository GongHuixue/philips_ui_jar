<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D3D3D"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="fany.phpuijar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/ring_pb"
            style="@style/ProgressBarStyleLoader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="Enter factor"
            android:inputType="number"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_second_progress_increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/increment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_second_progress_decrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/decrement"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/nrml_dftt_progbar"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/first_progress"
        style="@style/ProgressBarStyleDefault"
        android:layout_width="182dp"
        android:layout_height="20dp"
        android:max="100"
        android:progress="18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/discspaceprogressbar"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/second_progress"
        style="@style/ProgressBarStyleDefault.DiscSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="36" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/hg_progbar"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/third_progress"
        style="@style/ProgressBarStyleDefault.Highlighted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="54" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/hg_lrg_progbar"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/fourth_progress"
        style="@style/ProgressBarStyleDefault.Highlighted.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="72" />

</LinearLayout>
